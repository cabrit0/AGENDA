<%- include('includes/head') %> <%- include('includes/navbar') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages') %> 

      <div class="row text-center">
        <div class="col-6">
          <h4>Crie sua conta</h4>
          <p>se ainda nao tem conta crie uma, preencha o formulario:</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value= <%= csrfToken %> />
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">Criar Conta</button>
          </form>
        </div>

        <div class="col-6">
          <h4>Fazer Login</h4>
          <p>se voçe ja tem conta, faça login abaixo:</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value= <%= csrfToken %> /> 
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">login</button>
          </form>
        </div>
      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>
</div>
<%- include('includes/footer') %>
